<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Titles">
        <item name="fontFamily">@font/bebasneue</item>
    </style>

    <style name="Inputs" >
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/box_stroke_selector</item>
        <item name="hintTextColor">@color/md_theme_onSurface</item>
        <item name="cursorColor">@color/md_theme_secondary</item>
    </style>

    <style name="UserLabelDetailStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="UserDetailStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="MyCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardElevation">0dp</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>


</resources>