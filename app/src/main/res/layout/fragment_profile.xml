<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:padding="4dp"
            android:contentDescription="@string/profile"
            tools:src="@drawable/ic_account" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"
            tools:text="Admin" />

        <TextView
            android:id="@+id/tvBiography"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="4dp"
            tools:text="Sobre mí: Fanático de la F1 desde 2005" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvRegistrationDate"
            style="@style/UserDetailStyle"
            tools:text="Registrado el: 2024-03-11" />

        <TextView
            android:id="@+id/tvLastAccess"
            style="@style/UserDetailStyle"
            tools:text="Último acceso: 2025-05-09" />

        <TextView
            android:id="@+id/tvPosts"
            style="@style/UserDetailStyle"
            tools:text="Posts: 0" />

        <TextView
            android:id="@+id/tvRole"
            style="@style/UserDetailStyle"
            tools:text="Rol: Administrador" />

        <TextView
            android:id="@+id/tvTeam"
            style="@style/UserDetailStyle"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Equipo favorito: Ferrari" />

        <TextView
            android:id="@+id/tvDriver"
            style="@style/UserDetailStyle"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Piloto favorito: Charles Leclerc" />

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/edit_profile" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>
</ScrollView>
